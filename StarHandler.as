package {		import flash.display.MovieClip;	import flash.events.Event;	import flash.utils.Timer;	import flash.events.TimerEvent;		public class StarHandler extends MovieClip {		private const NUM_STARS:int = 300;		private const FADE_DELAY:int = 200;		private var starList:Array = new Array();		private var fadeTimer:Timer;						public function StarHandler() {			this.addEventListener(Event.ADDED_TO_STAGE, init);		}				private function init(event:Event):void {			addStars();			addTimer();		}				private function addTimer():void {			fadeTimer = new Timer(FADE_DELAY);			fadeTimer.addEventListener(TimerEvent.TIMER, fadeStar);			fadeTimer.start();		}						private function addStars():void {			for (var i:int = 0; i<NUM_STARS; i++) {				addStar();			}		}				private function addStar():void {			var star:Star = new Star();			starList.push(star);			setStarScale(star);			setStarPosition(star);			addChild(star);		}				private function setStarScale(star:Star):void {			var scaleFactor:Number = randomRange(0.5, 1.0);			star.scaleX = scaleFactor;			star.scaleY = scaleFactor;					}				//copy		function randomRange(minNum:Number, maxNum:Number):Number {			return (Math.floor(Math.random() * (maxNum - minNum + 1)) + minNum);		}				private function setStarPosition(star:Star):void {			star.x = Math.random() * (stage.stageWidth - star.width);			star.y = Math.random() * (stage.stageHeight - star.height);		}				private function fadeStar(event:TimerEvent):void {			var star:Star = starList[randomRange(0, NUM_STARS - 1)];			star.play();		}	}}